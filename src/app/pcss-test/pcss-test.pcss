
@import "./partials-base.pcss";

/* Variables */
$blue: #056ef0;
$column: 200px;

.menu {
  width: calc(4 * $column);
}

.menu-link {
  width: $column;
  background: $blue;
}

/* Conditionals */
.notice--clear {
  @if 3 < 5 {
    background: green;
  }
  @else {
    background: blue;
  }
}

/* Loops */
@for $i from 1 to 3 {
  .b-$i { width: $(i)px; }
}

@each $icon in (foo, bar, baz) {
  .icon-$(icon) {
    background: url(/icons/$icon.png);
  }
}

/* Mixins */
@define-mixin icon $name {
  padding-left: 16px;

  &::after {
    background: url(/icons/$name.png);
    content: "";
  }
}

.search {
  @mixin icon search;
}

/* Extends */
@define-extend bg-green {
  background: green;
}

.notice--clear-2 {
  @extend bg-green;
}

/* Property Lookup */
.heading {
  margin: 20px;
  padding: @margin;
}

/* Root */
.parent {
  background: white;

  @at-root {
    .child {
      background: black;
    }
  }
}

/* postcss-utilities */
.cfx {
  @util clearfix;
}

.box-16-9 {
  display: flex;
  margin-bottom: 20px;
  background-color: #ccc;

  @util aspect-ratio(16:9);
}

/* apply and custom properties & var() */
:root {
  /* --toolbar-theme: { */
